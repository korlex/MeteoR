<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@color/white_FFFFFF</item>
    <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Default</item>
  </style>

  <style name="AppTheme.OceanBlue">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.ForestGreen">
    <item name="colorPrimary">@color/forestGreenColorPrimary</item>
    <item name="colorPrimaryDark">@color/forestGreenColorPrimaryDark</item>
    <item name="colorAccent">@color/forestGreenColorAccent</item>
  </style>

  <style name="AppTheme.SunsetRed">
    <item name="colorPrimary">@color/sunsetRedColorPrimary</item>
    <item name="colorPrimaryDark">@color/sunsetRedColorPrimaryDark</item>
    <item name="colorAccent">@color/sunsetRedColorAccent</item>
  </style>

  <style name="AppTheme.BrandedLaunch">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="Widget.Button.Default" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
  </style>

  <style name="Widget.AppCompat.ProgressBar.Default" parent="Widget.AppCompat.ProgressBar">
    <item name="colorAccent">?attr/colorPrimaryDark</item>
  </style>
  
</resources>

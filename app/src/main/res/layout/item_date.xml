<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp">

  <ImageView
      android:id="@+id/ivDateIcon"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="@color/selectable_img"
      tools:srcCompat="@drawable/ic_few_clouds"/>

  <TextView
      android:id="@+id/tvDate"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="24dp"
      android:textSize="16sp"
      android:textColor="@color/selectable_txt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/ivDateIcon"
      app:layout_constraintTop_toTopOf="@+id/ivDateIcon"
      tools:text="21 april (00:00 - 24:00)"/>

  <TextView
      android:id="@+id/tvDateTemp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="24dp"
      android:textSize="16sp"
      android:textColor="@color/selectable_txt"
      app:layout_constraintBottom_toBottomOf="@+id/ivDateIcon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/ivDateIcon"
      tools:text="21 \u2103, Sunny"/>

</androidx.constraintlayout.widget.ConstraintLayout>